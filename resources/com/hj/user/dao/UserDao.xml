<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hj.user.dao.UserDao">
	<insert id="addUser" parameterType="UserInfo">
		insert into cf_user (user_id,user_name,user_pass)
		values(#{userId},#{userName},#{userPass});
	</insert>
	<resultMap id="addUser" type="UserInfo">
		<id property="userId" column="user_id" />
		<result property="userName" column="user_name" />
		<result property="userPass" column="user_pass" />
	</resultMap>
	<select id="getUserInfo" parameterType="UserInfo">
		select * from cf_user where userName = #{userName} and userPass = #{userPass}
	</select>
</mapper>

